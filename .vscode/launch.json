{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Hexo Server",
            "program": "${workspaceFolder}/node_modules/hexo/bin/hexo",
            "args": [
                "server",
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}